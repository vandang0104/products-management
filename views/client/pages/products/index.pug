extends ../../layouts/defaults.pug 
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
  +alert-error("5000") 
  
  .container.my-3
      .row
        .col-12
          +box-head("Danh sách sản phẩm")
      .row
        each item in products 
          .col-4.mb-3
            a(href=`/products/${item.slug}` class= "product-card")
              .product-item
                .inner-image
                  img(
                    src=item.thumbnail 
                    alt= item.title
                  )
                .inner-content
                  h3.inner-title #{item.title}
                  .inner-price-new $ #{item.priceNew}
                  .inner-price-old $ #{item.price}
                  .inner-discount #{item.discountPercentage}
